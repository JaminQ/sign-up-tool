swiper {
  height: 100%;
  padding-bottom: 48px;
  box-sizing: border-box;
}

swiper-item {
  width: 80vw !important;
  box-sizing: border-box;
  padding-bottom: 100rpx;
  left: 10vw;
  display: flex;
  align-items: center;
}

.class-wrap {
  width: 90%;
  height: 730rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 30rpx 80rpx;
  margin: 0 auto;
  color: #fff;
  transition: background-color .5s ease-in-out;
}

.class-wrap.class-current {
  background-color: #2c4f8f;
}

.class-wrap.class-next {
  background-color: #19305b;
}

.class-wrap.class-prev {
  background-color: #7687d7;
}

.class-name {
  font-size: 60rpx;
  text-align: center;
  line-height: 1.5em;
  height: 3em;
  margin: 0 auto 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.class-body {
  font-size: 30rpx;
  line-height: 60rpx;
}