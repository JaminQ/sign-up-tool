swiper {
  height: 100%;
  padding-bottom: 48px;
  box-sizing: border-box;
}

swiper-item {
  width: 80vw !important;
  box-sizing: border-box;
  padding-bottom: 100rpx;
  left: 10vw;
}

.class-wrap {
  width: 90%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 20rpx;
  margin: 0 auto;
  background-color: #2c4f8f;
  color: #fff;
}

.class-name {
  font-size: 70rpx;
  text-align: center;
}