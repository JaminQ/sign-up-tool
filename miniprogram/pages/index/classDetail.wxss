.class-wrap {
  box-sizing: border-box;
  width: 90%;
  height: 630rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  padding: 60rpx 50rpx;
  background-color: rgba(255, 255, 255, .9);
  font-size: 30rpx;
  color: #4b4b4b;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.class-line {
  line-height: 70rpx;
  margin: 15rpx 0;
  overflow: hidden;
  position: relative;
}

.class-label {
  float: left;
  width: 140rpx;
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 50%;
  margin-top: -35rpx;
}

.class-value {
  box-sizing: border-box;
  flex-grow: 1;
  min-height: 70rpx;
  border: 1px solid #4b4b4b;
  border-radius: 10rpx;
  background-color: #fff;
  text-align: center;
  padding: 0 20rpx;
  margin-left: 170rpx;
}

.sign-up-area {
  width: 90%;
  margin: 20rpx auto 0;
  color: #4b4b4b;
}

.sign-up-title {
  font-size: 28rpx;
  padding-left: 20rpx;
  margin-bottom: 10rpx;
}

.sign-up-user-list {
  background-color: rgba(255, 255, 255, .9);
  border-radius: 10rpx;
  font-size: 30rpx;
}

.sign-up-user {
  margin-left: 20rpx;
  overflow: hidden;
  position: relative;
  line-height: 90rpx;
  border-bottom: 1px solid #ddd;
}

.sign-up-user:last-child {
  border-bottom: none;
}

.sign-up-btn, .sign-out-btn {
  position: absolute;
  top: 50%;
  right: 20rpx;
  height: 60rpx;
  margin-top: -30rpx;
}

.sign-up-btn {
  background-color: #2c4f8f;
  color: #fff;
}

.sign-out-btn {
  color: #4b4b4b;
}