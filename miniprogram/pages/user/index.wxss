.user-avatar {
  display: flex;
  width: 100%;
  height: 100px;
  justify-content: center;
  align-items: center;
}

.user-avatar open-data {
  overflow: hidden;
  display: block;
  width: 80px;
  height: 80px;
  border-radius: 50%;
}

.user-nickname {
  display: flex;
  width: 100%;
  height: 25px;
  line-height: 25px;
  justify-content: center;
  align-items: center;
}