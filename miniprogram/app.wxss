@import 'lib/weui.wxss';

page {
  background-color: #f8f8f8;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-size: 16px;
}

.page {
  box-sizing: border-box;
  width: 100vw;
  overflow: hidden;
}

.page.full-screen {
  padding-top: 190rpx;
}

.page.page-bg {
  height: 100vh;
  background-image: url('https://res.wx.qq.com/op_res/s2le_ABGw-oox5bkke_bNkIldFQthVyCskmVsXw88Y1vtV6Qc_nrkJ0P-usfFmlJ');
  background-size: cover;
}

.page.with-tab-bar {
  padding-bottom: 48px;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-select {
  border-right: 0;
}

.weui-loadmore__tips_in-line {
  background-color: #f6f6f6;
}

.inline {
  display: inline;
}

.navbar__back {
  padding: 14px 16px;
  position: absolute;
  left: 0;
  top: 28px;
  line-height: 1;
  bottom: auto;
}
.navbar__back::before {
  content: "";
  display: inline-block;
  width: 10px;
  height: 10px;
  border-top: 1px solid #000;
  border-left: 1px solid #000;
  transform: rotate(-45deg);
}

@media only screen and (device-width : 375px) and (device-height : 812px) and (-webkit-device-pixel-ratio : 3) {
  .page {
    padding-bottom: 34px;
  }
  .page.page-no-padding {
    padding-bottom: 0;
  }
  .page.with-tab-bar {
    padding-bottom: 82px;
  }

  .navbar__back {
    top: 50px;
  }
}